<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_production_lot_form" model="ir.ui.view">
        <field name="name">view.production.lot.inherit.form</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="packaging" string="Packaging">
                    <field name="packaging_ids" no_label="1">
                        <tree>
                            <field name="name" />
                            <field name="qty" />
                            <field name="company_id" />
                            <field name="package_type_id" />
                            <field name="purchase" />
                            <field name="sales" />
                        </tree>
                        <form>
                            <group>
                                <field name="name" required="1" />
                            </group>
                            <group col="2">
                                <group>
                                    <field name="qty" />
                                    <field name="barcode" />
                                    <field name="company_id" />
                                    <field name="package_type_id" />
                                    <field name="purchase" />
                                    <field name="sales" />
                                </group>
                                <group />
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
