<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="EDI" name="edicom">
                    <group>
                        <group>
                            <field name="edicom_order_id" />
                            <field name="edicom_node" />
                            <field name="edicom_dept" />
                            <field name="edicom_function" />
                        </group>
                        <group>
                            <field name="edicom_special_cond" />
                            <field
                                name="edicom_emitter_id"
                                options="{'no_quick_create': True, 'no_create': True, 'no_create_edit': True}"
                            />
                            <field
                                name="edicom_buyer_id"
                                options="{'no_quick_create': True, 'no_create': True, 'no_create_edit': True}"
                            />
                            <field name="edicom_original_order" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
