<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="simplified_inherit_res_partner_form_view" model="ir.ui.view">
        <field name="name">res_partner.view.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='property_account_position_id']"
                position="after"
            >
                <field name="l10n_es_is_simplified" widget='boolean_toggle' />
            </xpath>
        </field>
    </record>
</odoo>
