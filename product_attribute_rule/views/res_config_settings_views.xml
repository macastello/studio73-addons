<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form_sale" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='connectors_setting_container']" position="after">
                <block title="Reglas de atributo" id="product_attribute_rule_settings">
                    <setting
                        id="restrict_template_rendering_setting"
                        help="Archivar las variantes al eliminar atributos de una plantilla"
                    >
                        <field name="archive_variants" />
                        <div class="mt8">
                            <button
                                name="%(product_attribute_rule.product_attribute_rule_action)d"
                                icon="oi-arrow-right"
                                type="action"
                                string="Reglas"
                                class="btn-link"
                            />
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
