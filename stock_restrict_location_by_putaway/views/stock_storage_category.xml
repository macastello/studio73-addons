<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="stock_storage_category_form_inherit" model="ir.ui.view">
        <field name="name">stock.storage.category.form.inherit</field>
        <field name="model">stock.storage.category</field>
        <field name="inherit_id" ref="stock.stock_storage_category_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='max_weight']/parent::div" position="after">
                <label for="max_volume" />
                <div class="o_row">
                    <field name="max_volume" />
                    <span>
                        <field name="volume_uom_name" />
                    </span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
