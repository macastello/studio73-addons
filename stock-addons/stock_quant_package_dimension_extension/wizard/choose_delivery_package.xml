<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="choose_delivery_package_view_form_inherit" model="ir.ui.view">
        <field name="name">choose.delivery.package.view.form</field>
        <field name="model">choose.delivery.package</field>
        <field
            name="inherit_id"
            ref="stock_delivery.choose_delivery_package_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='shipping_weight']" position="attributes">
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath
                expr="//field[@name='weight_uom_name']/parent::div"
                position="attributes"
            >
                <attribute name="invisible">0</attribute>
            </xpath>
            <xpath expr="//field[@name='weight_uom_name']/parent::div" position="after">
                <label for="height" />
                <div class="o_row">
                    <field name="height" readonly="0" />
                    <field name="length_uom_name" readonly="1" />
                </div>
                <label for="width" />
                <div class="o_row">
                    <field name="width" readonly="0" />
                    <field name="length_uom_name" readonly="1" />
                </div>
                <label for="pack_length" />
                <div class="o_row">
                    <field name="pack_length" readonly="0" />
                    <field name="length_uom_name" readonly="1" />
                </div>
                <label for="volume" />
                <div class="o_row">
                    <group>
                        <field
                            name="volume"
                            class="o_hr_narrow_field"
                            nolabel="1"
                            readonly="0"
                        />
                        <span class="text-left">mÂ³</span>
                    </group>
                </div>
            </xpath>
            <xpath expr="//div[@name='package_weight']" position="after">
                <label for="packaging_weight" />
                <div class="o_row">
                    <field name="packaging_weight" />
                    <field name="weight_uom_name" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
