<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="sale_order_import_edicom_form" model="ir.ui.view">
        <field name="name">sale.order.import.edicom.form</field>
        <field name="model">sale.order.import.edicom</field>
        <field name="arch" type="xml">
            <form string="Import orders from EDI">
                <p>
                    Para importar un pedido desde EDI, debes subir los archivos
                    CABPED.txt y LINPED.txt, en ese mismo orden
                </p>
                <field name="file_ids" mode="tree">
                    <tree editable="bottom">
                        <field name="wizard_id" column_invisible="1" />
                        <field name="filename" column_invisible="1" />
                        <field name="file" filename="filename" />
                    </tree>
                </field>
                <p>Equipo de ventas para los pedidos de venta que se van a importar</p>
                <group>
                    <group>
                        <field name="sale_team_id" required="1" />
                    </group>
                    <group />
                </group>
                <footer>
                    <button
                        name="action_import"
                        string="Importar"
                        type="object"
                        class="oe_highlight"
                    />
                    <button
                        special="cancel"
                        string="Cancelar"
                        type="object"
                        class="oe_link"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_import_edicom" model="ir.actions.act_window">
        <field name="name">Import orders from EDI</field>
        <field name="res_model">sale.order.import.edicom</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>

    <record
        id="sale_order_import_edicom_action_form_view"
        model="ir.actions.act_window.view"
    >
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_order_import_edicom_form" />
        <field name="act_window_id" ref="action_sale_order_import_edicom" />
    </record>

    <menuitem
        action="action_sale_order_import_edicom"
        name="Import from EDI"
        id="menu_sale_order_import_edicom"
        sequence="30"
        parent="sale.sale_order_menu"
    />
</odoo>
