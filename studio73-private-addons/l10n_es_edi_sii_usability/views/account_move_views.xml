<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_move_form_inherit_l10n_es_edi_trigger" model="ir.ui.view">
            <field name="name">account.move.form.inherit.l10n_es_edi_trigger</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <label for="sii_send_date" />
                    <field name="sii_send_date" readonly="1" nolabel="1" />
                    <label for="sii_state" />
                    <field name="sii_state" readonly="1" nolabel="1" />
                </xpath>
            </field>
        </record>
        <record id="view_out_invoice_tree_inherit" model="ir.ui.view">
            <field name="name">account.move.tree.sii.inherit</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree" />
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="sii_error" optional="hide" />
                </field>
            </field>
        </record>

        <record id="view_move_form_inherit_l10n_es_edi_trigger_page" model="ir.ui.view">
            <field name="name">account.move.form.inherit.l10n_es_edi_trigge.page</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page id="sii_information" name="SII">
                        <group>
                            <field name="sii_state" readonly="1" />
                            <field name="l10n_es_edi_csv" readonly="1" />
                            <field name="sii_send_date" readonly="1" />
                            <field name="sii_cron_trigger_ids" readonly="1" />
                            <field name="sii_error" readonly="1" />
                            <field name="sii_sent_header" readonly="1" />
                            <field name="sii_sent_response" readonly="1" />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
